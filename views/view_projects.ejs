<%- include('partials/student-header') -%>

<%#  comment  %>

<div class="jumbotron">
    <h1> View Projects </h1> 
</div>

<div style="text-align: center; margin-bottom: 30px; margin-top: 50px;">
   
</div>

<div class="box">
    <h6>
        <% var b = (message.length === 0 ) %>
        <p <%= b ? "hidden" : ""  %> style="color: green" > <%= message %> </p>
    </h6>
    <h2>Hi <%= username %> </h2> <br>
    <h3> Project list:</h3>


    <div class="container">
        <br>
        <h5  style="text-align:left" >Count = <%=project_list.length%> </h5>
        <table class="table table-striped  mytable">
            <thead class="table-dark">
                <tr>
                    <th scope="col">S. No.</th>
                    <th scope="col">Project ID</th>
                    <th scope="col">Prof ID</th>
                    <th scope="col">Prof Name</th>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                </tr>
            </thead>

            <tbody>
                <% for(var i=0; i < project_list.length ; i++){ %>
                <tr>
                    <th scope="row"> <%= i+1 %> </th>
                    <% var project = project_list[i] %>
                    <td><%= project.project_id %></td>
                    <td><%= project.prof_id %></td>
                    <%# var link = "/project/" + project.project_id  %>
                    <td><%= project.first_name + " " + project.last_name %></td>                    
                    <td> <%=project.title%> </td>
                    <% var pid = project.project_id %>
                    <% var link = "/view_proj_detail/" + pid  %>
                    <td style="text-align:right;padding-right:30px" > <%=project.description%> <a style="margin-left: 15px; padding-right:40px;" class="btn btn-success col-2" href=<%=link%> >Link</a> </td>
                    
                </tr>
                <% } %>

            </tbody>

        </table>
    </div>



</div>




<%- include('partials/user-footer') -%>