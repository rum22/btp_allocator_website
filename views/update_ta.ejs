<%- include('partials/prof-header') -%>

<%#  as this is a ejs file
        user object is accessible here  %>

<div class="jumbotron">
    <h1> Update TA Details  </h1>

</div>


<div class="container">
    <div class="box">
        <h6
        <% var b = (message.length === 0 ) %>
        <p <%= b ? "hidden" : ""  %> style="color: green" > <%= message %> </p>
        </h6>
    </div>
</div>


<!-- make this post route ***-->
<div class="formclass">

    <% var link_to_update="/update_ta/" + ta.ta_id %>
    <form class="" action=<%= link_to_update %> method="post">
        <div class="form-group">
            <label>TA ID</label>
            <input type="text" class="form-control" name="ta_id" value=<%=ta.ta_id%> disabled>
        </div>
        <div class="form-group">
            <label>First name</label>
            <input type="text" class="form-control" name="f_name" value=<%=ta.first_name%> required>
        </div>
        <div class="form-group">
            <label>Last name</label>
            <input type="text" class="form-control" name="l_name" value=<%=ta.last_name%> required>
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" name="email" value=<%=ta.email%> required>
        </div>

        <hr class="ruler">
        <button type="submit" class=" form-control btn btn-lg btn-success finalbutton expand" >Submit</button>
    </form>

</div>



<%- include('partials/user-footer') -%>